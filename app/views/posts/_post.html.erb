<div class="w-[500px] m-auto mt-16">
    <% if !post.archived?%>

        <div class="px-2""><%=link_to post.user.username, post.user%></div>
        
            <%= image_tag post.image_url, class:"h-[500px] w-[500px] rounded-[6px] mt-3"%>
        <div class="ml-1" >

            <div class="mt-3 px-2 flex flex-row h-[42px]">
                <%= button_to "like", like_post_path(post), remote: true, method: :put, id: 'like_button'%>
                <div id="like-count" data-post-id="<%= post.id %>">
                <br>
                    Нравится:
                    <%= post.liked_users.count %>
                </div>
            </div>    
        
                    
            <div class="font-bold">
                <%= post.user.username%>
            </div> 
            <%=  post.body %>
            <div class="text-gray-500 mt-1"><%= link_to "Посмотреть все комментарии (#{post.comments.count})", post %></div>
            <div class="text-gray-500 mt-1 text-[13px]"><%= post.created_at%>.</div>
        </div>
    <% end %>
</div>