<%if !comment.archived?%>
  <b> <%= comment.user.username%></b>: <%= comment.body %>
 
  <%if comment.author?(current_user)%>
    <%= link_to "Destroy", [comment.post, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                  } %>
  <% end %>
  <br>
<% end %>


