<% if current_user.following?(@user) %>
    $('#follow_button').html("<%= escape_javascript(button_to 'Unfollow', follow_path(@user), method: :post, remote: true, id: 'follow_button') %>");
    $('#followers_count').html("<%= j @user.followers.count %>");
<% else %>
    $('#follow_button').html("<%= escape_javascript(button_to 'Follow', follow_path(@user), method: :post, remote: true, id: 'follow_button') %>");
    $('#followers_count').html("<%= j @user.followers.count %>");  
<% end %>